<h1>My friends</h1>

<div class="search-area">
  <h4 class="search-title">Search users to follow!</h4>
  <%= form_tag search_user_path, remote: true, method: :get do %>
  <div class="row">
    <div class="col-md-6">
      <div class="input-group mb-4">
        <%= text_field_tag :first_name, params[:first_name], placeholder:"First name", class:"form-control" %>
        <%= text_field_tag :last_name, params[:last_name], placeholder:"Last name", class:"form-control" %>
        <div class="input-group-append">
          <%= button_tag "Search", type: :submit, class:"btn btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>

<div id="results">
</div>

<% if !@friend_list.empty? %>
  <%= render 'frienships/list' %>
  <% else %>
  <p>Your friends will be displayed here when added.</p>
<% end %>
