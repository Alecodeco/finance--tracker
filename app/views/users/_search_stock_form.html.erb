<div class="search-area">
  <h4 class="search-title">Search stocks</h4>
  <%= form_tag search_stock_path, remote: true, method: :get do %>
  <div class="row">
    <div class="col-md-5">
      <div class="input-group">
        <span class="input-group-text">
          <%= fa_icon "search" %>
        </span>
        <%= text_field_tag :stock, params[:stock], placeholder:"Ticker / Symbol", class:"form-control" %>
        <div class="input-group-append">
          <%= button_tag "Search", type: :submit, class:"btn btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
