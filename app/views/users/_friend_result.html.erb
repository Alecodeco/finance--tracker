<div class="results-block">
  <%= render 'layouts/messages' %>
</div>

<% if @user %>
<table class="table table-hover table-sm">
  <tbody>
    <% @user.each do |user| %>
    <tr>
      <td><strong>Name: </strong> <%= user.first_name %></td>
      <td><strong>Last name: </strong> <%= user.last_name %></td>
      <td><strong>Mail: </strong> <%= user.email %></td>
      <td><strong>Actions: </strong>
        <%= link_to "View profile", user_path(user.id), class:"btn btn-sm btn-info" %>
        <% if not_friends_with?(current_user, user.id) %>
          <%= link_to "Follow", friendships_path(friend: user), class:"btn btn-sm btn-primary", method: :post %>
        <% else %>
          <span class="">Already friends</span>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>
